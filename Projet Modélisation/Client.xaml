<Window x:Class="Projet_Modélisation.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_Modélisation"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid Background="#FFF2F2F2">
        <StackPanel Margin="10" Orientation="Horizontal">
            <Button Content="Passer une commande" Click="PasserCommande_Click" Width="165" Margin="5" Height="24" VerticalAlignment="Top"/>
        </StackPanel>
        <DataGrid x:Name="Commandes" Margin="10,43,10,10" AutoGenerateColumns="True" Background="White" IsReadOnly="True" ColumnWidth="*"/>
    </Grid>
</Window>

