<Window x:Class="Projet_Modélisation.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_Modélisation"
        Title="Login" Height="206" Width="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Courriel :" Margin="22,48,36,0" Height="54" VerticalAlignment="Top"/>
        <TextBox Grid.Row="0" Width="200" x:Name="courriel" Margin="142,48,36,64"/>

        <TextBlock Text="Mot de passe :" Margin="21,80,365,72" Grid.RowSpan="3"/>
        <TextBox Grid.Row="0" Width="200" x:Name="mdp" Margin="142,84,36,28"/>

        <Button Grid.Row="2" Width="100" Content="Créer un compte" Click="Compte_Click" Margin="10,14,200,0" Height="20" VerticalAlignment="Top"/>
        <Button Grid.Row="2" Width="100" Content="Se connecter" Click="Connecter_Click" Margin="242,14,36,47"/>
    </Grid>
</Window>
